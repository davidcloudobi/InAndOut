@model InAndOut.Models.ExpenseType

@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <form asp-action="UpdatePost" asp-controller="ExpenseType" method="post">
        <input asp-for="Id" hidden />
        <div class="border p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row pb-3">
                <h2 class="text-black-50 pl-3"> Update ExpenseType</h2>
            </div>

            <div class="form-group row pl-3">
                <div class="col-6">
                    <label asp-for="Name" class="form-label"></label>
                </div>



            </div>

            <div class="form-group row pl-3">
                <div class="col-6">
                    <input asp-for="Name" type="text" class="form-control" id="Borrower" aria-describedby="Borrower">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>



            </div>

            <div class="form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col"> <button type="submit" class="btn btn-success w-75">Update</button></div>
                    <div class="col"> <a asp-controller="ExpenseType" asp-action="Index" class=" btn btn-secondary w-75">Go Back</a></div>
                </div>
            </div>
        </div>
    </form>

</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
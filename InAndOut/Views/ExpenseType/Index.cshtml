@model IEnumerable<InAndOut.Models.ExpenseType>

@{
    ViewData["Title"] = "Index";
}

@*<h1>Index -Items</h1>*@

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> ExpenseType List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-outline-primary" asp-controller="ExpenseType" asp-action="Create">  Create new ExpenseType</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>ExpenseType Name</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="35%">@item.Name</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a class="btn btn-outline-secondary mx-1" asp-controller="ExpenseType" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                                <a class="btn btn-outline-danger mx-1" asp-controller="ExpenseType" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>

                            </div>
                       </td>

                    </tr>

                }
                @*<tr>

                    <td width="30%">Total Amount</td>
                    <td width="30%"> @Model.Sum(x=>x.Amount)</td>

                </tr>*@
            </tbody>
        </table>
    }

</div>
@model IEnumerable<InAndOut.Models.Expense>

@{
    ViewData["Title"] = "Index";
}

@*<h1>Index -Items</h1>*@

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Expense List</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-outline-primary" asp-controller="Expense" asp-action="Create">  Create new Expense</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>Expense Name</th>
                    <th>Amount</th>
                    <th>Expense Type</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="25%">@item.ExpenseName</td>
                    <td width="25%"> @item.Amount </td>
                    <td width="25%"> @item.ExpenseType.Name </td>
                    <td width="25%">
                        <div class="w-100 btn-group" role="group">
                            <a class="btn btn-outline-secondary mx-1" asp-controller="Expense" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                            <a class="btn btn-outline-danger mx-1" asp-controller="Expense" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>

                        </div>
                    </td>

                </tr>

                }
                <tr>

                    <td width="30%">Total Amount</td>
                    <td width="30%"> @Model.Sum(x=>x.Amount)</td>

                </tr>
            </tbody>
        </table>
    }

</div>
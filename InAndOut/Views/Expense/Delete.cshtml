@model InAndOut.Models.Expense

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <form asp-action="DeletePost" asp-controller="Expense" method="post">
        <input asp-for="Id" hidden />
        <div class="border p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row pb-3">
                <h2 class="text-black-50 pl-3"> Delete Expense</h2>
            </div>

            <div class="form-group row pl-3">
                <div class="col-6">
                    <label asp-for="ExpenseName" class="form-label"></label>
                </div>
                <div class="col-6">
                    <label asp-for="Amount" class="form-label"></label>
                </div>


            </div>

            <div class="form-group row pl-3">
                <div class="col-6">
                    <input asp-for="ExpenseName" disabled type="text" class="form-control" id="Borrower" aria-describedby="Borrower">
           
                </div>
                <div class="col-6">
                    <input asp-for="Amount" disabled class="form-control" id="Lender">
             
                </div>


            </div>

            <div class="form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col"> <button type="submit" class="btn btn-danger w-75">Delete</button></div>
                    <div class="col"> <a asp-controller="Expense" asp-action="Index" class=" btn btn-secondary w-75">Go Back</a></div>
                </div>
            </div>
        </div>
    </form>

</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
}
}
@model InAndOut.Models.ExpenseType

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <form asp-action="Create" asp-controller="ExpenseType" method="post">
        <div class="border p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row pb-3">
                <h2 class="text-black-50 pl-3"> Add Expense</h2>
            </div>

            <div class="form-group row pl-3">
                <div class="col-6">
                    <label asp-for="Name" class="form-label"></label>
                </div>

               

            </div>

            <div class="form-group row pl-3">
                <div class="col-6">
                    <input asp-for="Name" type="text" class="form-control" id="Name" aria-describedby="Name">
               <span asp-validation-for="Name" class="text-danger"></span>
                </div>

              

            </div>

            <div class="form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col"> <button type="submit" class="btn btn-primary w-75">create</button></div>
                    <div class="col"> <a asp-controller="ExpenseType" asp-action="Index" class=" btn btn-danger w-75">Go Back</a></div>
                </div>
            </div>
        </div>
    </form>

</div>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial" />}
}